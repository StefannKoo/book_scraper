
<div style="display:flex;flex-direction:row; margin-top:10px"> 
    <div style="width:500px;height:500px;background-color:white">
        <div style="width:350px;height:500px;margin-left:auto;margin-right:auto;padding:20px">
        <%=image_tag(@audit.image, style:"height:100%;width:100%;border:1px solid black") %>
        </div>
    </div>
    <div  style="width:500px;height:500px;background-color:white;" >
    <div style="display:flex;">
     <%= button_to "Reset",reset_publisher_scan_audit_path(@audit.scan.publisher,@audit.scan,@audit),method:"get",class:"nav-link btn btn-success text-light  text-center mt-2" %>
    </div>
       <h4 class="mt-5 text-center"><%=@audit.platform_book.name %> </h4><br>
       <h3> Price: <%=@audit.price %></h3>
       <div style="display:flex;justify-content:center" class="mt-5">
            <% @audit.audit_prices.each do |ap| %>
                <div style="border:2px solid rgb(96,96,96);margin-right:10px;padding:2px">
                 <p><%=ap.variant %></p>
                 <p>$<%=ap.amount %></p>
                 <p style="color:red"><%=@audit.audit_actions.find_by(audit_price_id:ap.id)&.message %></p>
                </div>
            <% end %>
       </div>
    </div>
</div>