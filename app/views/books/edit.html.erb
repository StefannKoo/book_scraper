<div class="container p-5 w-50 mt-5 rounded border"> 
<div class="text-center font-bold">
    <h3>Edit Book</h3>
</div>
   <%=form_for @book, url: book_path(@book), html: {method: "put"} do |f| %>
    <div class="form-group ps-5 pe-5">
    <%= f.label:name, class:"fw-bold"%>
    <%= f.text_field:name ,placeholder:"Insert Name",class:"form-control" %>
</div>
<br>
<div class="form-group ps-5 pe-5">
    <%= f.label:date,class:"fw-bold" %>
    <%= f.date_field:date,class:"form-control" %>
</div>
<br>


<div class="form-check ms-4 mb-2 pe-5">
    <%=f.label:publisher,class:"fw-bold" %>
    <%=select("publisher", "publisher_id",Publisher.all.collect {|p| [ p.name, p.id ] },
     { include_blank: false }, {class: "form-select  "})%>
</div>

<div class="form-check ms-5 mb-2 pe-5">
    <%=f.label:ebook,class:"fw-bold" %>
    <%= f.check_box:ebook,class:"form-check-input" %>
</div>

<div>
<%=f.submit "Save changes",class:"btn btn-secondary w-25 ms-5 mt-1"%>
</div>
<% end %>
</div>